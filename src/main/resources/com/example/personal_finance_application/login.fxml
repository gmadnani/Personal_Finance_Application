<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane fx:id="mainPane" prefHeight="500.0" prefWidth="500.0" style="-fx-background-color: #8BD5D0;"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.personal_finance_application.Login">
    <top>
        <VBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
            <Label alignment="CENTER" prefHeight="87.0" prefWidth="669.0" style="-fx-background-color: #79D17E;"
                   text="Personal Finance Application" textAlignment="CENTER">
                <font>
                    <Font name="Comic Sans MS Bold" size="35.0"/>
                </font>
            </Label>
        </VBox>
    </top>
    <center>
        <VBox alignment="TOP_CENTER" prefHeight="240.0" prefWidth="502.0" spacing="20.0" BorderPane.alignment="CENTER">
            <Label alignment="CENTER" contentDisplay="CENTER" text="Login" textAlignment="CENTER">
                <font>
                    <Font name="Comic Sans MS" size="30.0"/>
                </font>
                <VBox.margin>
                    <Insets top="50.0"/>
                </VBox.margin>
            </Label>
            <HBox alignment="CENTER_LEFT" prefHeight="39.0" prefWidth="500.0" spacing="20.0"
                  BorderPane.alignment="CENTER">
                <children>
                    <Label text="Email: ">
                        <font>
                            <Font name="Comic Sans MS" size="25.0"/>
                        </font>
                        <HBox.margin>
                            <Insets top="20.0"/>
                        </HBox.margin>
                    </Label>
                    <TextField fx:id="emailField"/>
                </children>
                <VBox.margin>
                    <Insets left="30.0" top="10.0"/>
                </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="39.0" prefWidth="500.0" spacing="20.0"
                  BorderPane.alignment="CENTER">
                <children>
                    <Label text="Password: ">
                        <font>
                            <Font name="Comic Sans MS" size="25.0"/>
                        </font>
                    </Label>
                    <TextField fx:id="passwordField"/>
                </children>
                <VBox.margin>
                    <Insets left="30.0"/>
                </VBox.margin>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="39.0" prefWidth="500.0" spacing="20.0"
                  BorderPane.alignment="CENTER">
                <VBox.margin>
                    <Insets left="30.0" top="30.0"/>
                </VBox.margin>
                <children>
                    <Button fx:id="submitButton" onAction="#onSubmit" prefHeight="54.0" prefWidth="216.0" text="Submit">
                        <font>
                            <Font name="Comic Sans MS" size="20.0"/>
                        </font>
                    </Button>
                    <Button fx:id="goBackButton" onAction="#onGoBack" prefHeight="54.0" prefWidth="216.0"
                            text="Go Back">
                        <font>
                            <Font name="Comic Sans MS" size="20.0"/>
                        </font>
                    </Button>
                </children>
            </HBox>
        </VBox>
    </center>
</BorderPane>
