<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane fx:id="mainPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/15.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.personal_finance_application.MainController">
    <top>
        <VBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
            <Label text="Personal Finance Application"/>
            <HBox alignment="CENTER" spacing="10.0">
                <Button fx:id="addTransactionButton" text="Add Transaction"/>
                <Button fx:id="generateReportButton" text="Generate Report"/>
            </HBox>
        </VBox>
    </top>
    <center>
        <ScrollPane>
            <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
                <Label text="Transaction History"/>
                <TableView fx:id="transactionTable" prefHeight="400.0" prefWidth="600.0">
                    <columns>
                        <TableColumn fx:id="dateColumn" prefWidth="100.0" text="Date"/>
                        <TableColumn fx:id="descriptionColumn" prefWidth="300.0" text="Description"/>
                        <TableColumn fx:id="categoryColumn" prefWidth="100.0" text="Category"/>
                        <TableColumn fx:id="amountColumn" prefWidth="100.0" text="Amount"/>
                    </columns>
                </TableView>
            </VBox>
        </ScrollPane>
    </center>
    <right>
        <VBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
            <Label text="Summary Information"/>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label text="Total Income:"/>
                <Label fx:id="totalIncomeLabel"/>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label text="Total Expenses:"/>
                <Label fx:id="totalExpensesLabel"/>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label text="Net Income:"/>
                <Label fx:id="netIncomeLabel"/>
            </HBox>
        </VBox>
    </right>
    <fx:include source="addTransaction.fxml" fx:id="addTransactionDialog"/>
    <fx:include source="transactionManager.fxml" fx:id="transactionManager"/>
    <fx:include source="report.fxml" fx:id="reportDialog"/>
</BorderPane>
